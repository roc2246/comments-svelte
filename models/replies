const mongoose = require("mongoose");

const crepliesSchema = new mongoose.Schema({
  id: {
    type: Number,
    required: true,
  },
  content: {
    type: String,
    required: true,
  },
  createdAt: {
    type: String,
    // type: Date,

    required: true,
    // default: Date.now,
  },
  score: {
    type: Number,
    required: true,
  },
  replyingTo: {
    type: String,
    required: false,
  },
  user: {
    image: {
      png: {
        type: String,
        required: true,
      },
      webp: {
        type: String,
        required: true,
      },
    },
    username: {
      type: String,
      required: true,
    },
  },
});

const Reply = mongoose.model("Reply", replySchema);
module.exports = Reply;
